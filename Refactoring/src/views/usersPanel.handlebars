{{#if users.length}}
{{log users}}
<div class='product-container'>
    <div class="users-container">
        <table>
            <thead>
                <tr>
                    <th>Username</th>
                    <th>Correo Electr√≥nico</th>
                    <th>Rol</th>

                </tr>
            </thead>
    {{#each users}}
            <tbody>
                <tr>
                    <td>{{username}}</td>
                    <td>{{email}}</td>
                    <td>{{role}}</td>
                    <td>
                        <a href="#" class="users-admin-button role-button" data-user="{{id}} {{../token}}">
